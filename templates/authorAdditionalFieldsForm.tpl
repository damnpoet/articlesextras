{assign var="pageTitle" value="plugins.generic.articlesExtras.authors.info"}{include file="common/header.tpl"}<ul class="menu">	<li class="current"><a href="{url page="ArticlesExtrasPlugin" op="submitAuthorAdditionalFields" path=$current}">{translate key="plugins.generic.articlesExtras.authors"}</a></li>	<li><a href="{url page="ArticlesExtrasPlugin" op="submitBody" path=$current}">Cuerpo</a></li>	<li><a href="{url page="ArticlesExtrasPlugin" op="submitImages" path=$current}">Imagenes</a></li>	<li><a href="{url page="ArticlesExtrasPlugin" op="submitCitations" path=$current}">Citas</a></li></ul><br/><form id="formEdit" method="post" action="{url page="ArticlesExtrasPlugin" op="saveAuthorAdditionalFields"}">{include file="common/formErrors.tpl"}{foreach from=$authors item=author}<table class="data" width="100%">			<tr valign="top">			<td class="label" colspan="2"><h4>{$author->getFullName()}:</h4></td>		</tr>		<tr valign="top">			<td></td>		</tr>		<tr valign="top">			<td></td>		</tr>		<tr valign="top">			<td class="label" width="30%">{translate key="user.affiliation"}: </td>			<td class="value">{$author->getAffiliation($formLocale)|escape|nl2br|default:"&mdash;"}</td>		</tr>		<tr valign="top">						<td class="label" width="30%">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.orgname"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_orgname]" id="author{$author->getId()}-{$authorIndex|escape}-aff_orgname" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_orgname')|escape}" size="30" maxlength="90" class="textField" />			</td>		</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.orgdiv1"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_orgdiv1]" id="author{$author->getId()}-{$authorIndex|escape}-aff_orgdiv1" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_orgdiv1')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.orgdiv2"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_orgdiv2]" id="author{$author->getId()}-{$authorIndex|escape}-aff_orgdiv2" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_orgdiv2')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.orgdiv3"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_orgdiv3]" id="author{$author->getId()}-{$authorIndex|escape}-aff_orgdiv3" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_orgdiv3')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.city"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_city]" id="author{$author->getId()}-{$authorIndex|escape}-aff_city" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_city')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.state"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_state]" id="author{$author->getId()}-{$authorIndex|escape}-aff_state" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_state')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">				<span class="instruct">{translate key="plugins.generic.articlesExtras.authors.zipcode"}</span>			</td>			<td class="value">				<input type="text" name="authorsData[{$author->getId()}][aff_zipcode]" id="author{$author->getId()}-{$authorIndex|escape}-aff_zipcode" value="{$articleExtrasDao->getAuthorMetadataByAuthorId($author->getId(), 'aff_zipcode')|escape}" size="30" maxlength="90" class="textField" />			</td>					</tr>		<tr valign="top">			<td class="label">{translate key="common.country"}:</td>			<td class="value">{$author->getCountryLocalized()|escape|default:"&mdash;"}</td>		</tr>		<tr valign="top">			<td class="label">{translate key="user.biography"}:</td>			<td class="value">{$author->getLocalizedBiography()|strip_unsafe_html|nl2br|default:"&mdash;"}</td>		</tr>	</table>	<br/>	<br/>	{/foreach}	<input type="hidden" name="current" value="{$current}" />	<input type="submit" value="{translate key="common.done"}" class="button defaultButton" /></form>{include file="common/footer.tpl"}